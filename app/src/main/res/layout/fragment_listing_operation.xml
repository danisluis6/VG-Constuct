<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/titleSizes"
            android:layout_width="186dp"
            android:layout_height="42dp"
            android:background="@drawable/triangle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/titleSizes"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cslL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleSizes">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/gradient"
                android:hint="@string/input_L1"
                android:paddingTop="8dp"
                android:textColorHint="#000"
                app:hintTextAppearance="@style/FloatLabelEditTextStyle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/edtL1"
                    style="@style/FloatLabelEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:drawableRight="@drawable/ic_donvi_m"
                    android:drawablePadding="10dp"
                    android:drawableEnd="@drawable/ic_donvi_m"
                    android:imeOptions="actionNext"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:labelFor="@+id/edtCurrentPswd"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:typeface="monospace" />
            </android.support.design.widget.TextInputLayout>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cslL2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cslL1">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/gradient"
                android:hint="@string/input_L2"
                android:paddingTop="8dp"
                android:textColorHint="#000"
                app:hintTextAppearance="@style/FloatLabelEditTextStyle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/edtL2"
                    style="@style/FloatLabelEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:drawableRight="@drawable/ic_donvi_m"
                    android:drawableEnd="@drawable/ic_donvi_m"
                    android:imeOptions="actionNext"
                    android:textSize="14sp"
                    android:drawablePadding="10dp"
                    android:inputType="number"
                    android:labelFor="@+id/edtCurrentPswd"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:typeface="monospace" />
            </android.support.design.widget.TextInputLayout>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cslh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cslL2">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/gradient"
                android:hint="@string/input_h"
                android:paddingTop="8dp"
                android:textColorHint="#000"
                app:hintTextAppearance="@style/FloatLabelEditTextStyle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/edth"
                    style="@style/FloatLabelEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:drawableRight="@drawable/ic_donvi_m"
                    android:drawableEnd="@drawable/ic_donvi_mm"
                    android:imeOptions="actionNext"
                    android:textSize="14sp"
                    android:drawablePadding="10dp"
                    android:inputType="number"
                    android:labelFor="@+id/edtCurrentPswd"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:typeface="monospace" />
            </android.support.design.widget.TextInputLayout>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/csla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cslh">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/gradient"
                android:hint="@string/input_a"
                android:paddingTop="8dp"
                android:textColorHint="#000"
                app:hintTextAppearance="@style/FloatLabelEditTextStyle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/edta"
                    style="@style/FloatLabelEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:drawableRight="@drawable/ic_donvi_m"
                    android:drawableEnd="@drawable/ic_donvi_mm"
                    android:imeOptions="actionNext"
                    android:textSize="14sp"
                    android:drawablePadding="10dp"
                    android:inputType="number"
                    android:labelFor="@+id/edtCurrentPswd"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:typeface="monospace" />
            </android.support.design.widget.TextInputLayout>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/titleMaterials"
            android:layout_width="186dp"
            android:layout_height="42dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/triangle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/csla">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/titleMaterials"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layer1Materials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/titleMaterials">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/gradient"
                    android:hint="@string/input_concrete"
                    android:paddingTop="8dp"
                    android:textColorHint="#000"
                    app:hintTextAppearance="@style/FloatLabelEditTextStyle"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <EditText
                        android:id="@+id/edtConcrete"
                        style="@style/FloatLabelEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:drawableRight="@drawable/ic_donvi_m"
                        android:drawableEnd="@drawable/ic_drop_down"
                        android:imeOptions="actionNext"
                        android:textSize="14sp"
                        android:drawablePadding="10dp"
                        android:inputType="number"
                        android:labelFor="@+id/edtCurrentPswd"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:typeface="monospace" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/gradient"
                    android:hint="@string/input_Rb"
                    android:paddingTop="8dp"
                    android:textColorHint="#000"
                    app:hintTextAppearance="@style/FloatLabelEditTextStyle"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <EditText
                        android:id="@+id/edtRb"
                        style="@style/FloatLabelEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:drawableRight="@drawable/ic_donvi_m"
                        android:drawableEnd="@drawable/ic_donvi_mpa"
                        android:imeOptions="actionNext"
                        android:textSize="14sp"
                        android:inputType="number"
                        android:drawablePadding="10dp"
                        android:labelFor="@+id/edtCurrentPswd"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:typeface="monospace" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layer2Materials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/layer1Materials">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/gradient"
                    android:hint="@string/input_steel"
                    android:paddingTop="8dp"
                    android:textColorHint="#000"
                    app:hintTextAppearance="@style/FloatLabelEditTextStyle"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <EditText
                        android:id="@+id/edtSteel"
                        style="@style/FloatLabelEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:drawableRight="@drawable/ic_donvi_m"
                        android:drawableEnd="@drawable/ic_drop_down"
                        android:imeOptions="actionNext"
                        android:textSize="14sp"
                        android:inputType="number"
                        android:drawablePadding="10dp"
                        android:labelFor="@+id/edtCurrentPswd"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:typeface="monospace" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/gradient"
                    android:hint="@string/input_Rs"
                    android:paddingTop="8dp"
                    android:textColorHint="#000"
                    app:hintTextAppearance="@style/FloatLabelEditTextStyle"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <EditText
                        android:id="@+id/edtRs"
                        style="@style/FloatLabelEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:drawableRight="@drawable/ic_donvi_m"
                        android:drawableEnd="@drawable/ic_donvi_mpa"
                        android:imeOptions="actionDone"
                        android:textSize="14sp"
                        android:inputType="number"
                        android:drawablePadding="10dp"
                        android:labelFor="@+id/edtCurrentPswd"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:typeface="monospace" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>